Film film : Color {
  resolution { 1024 }
  exposure { 0 }
}

Camera camera : Pinhole {
  position { -0.01, 0.995, 5.0 }
  fov { 27.8 }
  spp { 1024 }
  film { @film }
  file { "../renders/cbox-diff.exr" }
  filter : Gaussian {
    radius { 1 }
  }
  target { "../renders/cbox.exr" }
}

import "../meshes/cbox.luisa"

Integrator pt : MegaPathGrad {
  sampler : Independent {}
  depth { 10 }
}

Integrator normal : Normal {}

render {
  cameras { @camera }
  shapes { @cbox }
  integrator { @pt }
}
