Shape cbox-light : Mesh {
  file { "../../meshes/cbox-parts/light.obj" }
  light : Diffuse {
    emission : Constant {
      v { 51.0, 36.0, 12.0 }
      semantic { "illuminant" }
    }
  }
}

Shape cbox : Group {
  shapes {
    @cbox-floor,
    @cbox-ceiling,
    @cbox-left-wall,
    @cbox-right-wall,
    @cbox-back-wall,
    @cbox-tall-box,
    @cbox-short-box,
    @cbox-light,
    @dragon-000,
    @dragon-001,
    @dragon-002,
    @dragon-003,
    @dragon-004,
    @dragon-005,
    @dragon-006,
    @dragon-007,
    @dragon-008,
    @dragon-009,
    @dragon-010,
    @dragon-011,
    @dragon-012,
    @dragon-013,
    @dragon-014,
    @dragon-015
  }
}

Film film : Color {
  resolution { 256 }
  exposure { 0 }
}

Camera camera0 : Pinhole {
  position { -0.01, 0.995, 5.0 }
  fov { 27.8 }
  spp { 32 }
  film { @film }
  file { "../../renders/cbox-diff-0.exr" }
  filter : Gaussian {
    radius { 1 }
  }
  target : Image {
    file { "../../renders/cbox-ref-32-0.exr" }
  }
}

Camera camera1 : Pinhole {
  position { 1, 1.6, 2.0 }
  front { -0.4, -0.2, -1 }
  fov { 40 }
  spp { 512 }
  film { @film }
  file { "../../renders/cbox-diff-1.exr" }
  filter : Gaussian {
    radius { 1 }
  }
  target : Image {
    file { "../../renders/cbox-ref-32-1.exr" }
  }
}

Integrator pt : MegaRadiativeDiff {
//Integrator pt : MegaReplayDiff {
  sampler : Independent {}
  depth { 10 }
  rr_depth { 5 }

  //display_camera_index { 0 }
  save_process { true }
  loss : L2 {}
  learning_rate { 0.1 }
  iterations { 100 }
}

render {
  spectrum : sRGB {}
  cameras {
    @camera0
    // @camera1
  }
  shapes { @cbox }
  integrator { @pt }
}
