Surface cbox-white : Matte {
  Kd : Constant {
    semantic { "albedo" }
    //v { 0.725, 0.71, 0.68 }
    v { 0.5, 0.5, 0.5 }
    requires_grad { true }
    range { 0, 1 }
  }
  roughness : Constant {
    v { 1 }
  }
}

Surface cbox-red : Matte {
